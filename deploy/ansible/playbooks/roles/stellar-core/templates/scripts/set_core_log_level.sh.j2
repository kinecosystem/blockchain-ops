#!/usr/bin/env bash

case "$1" in
        'debug')
        log_level='debug'
        echo 'setting logs to DEBUG'
        ;;

        'info')
        log_level='info'
        echo 'setting logs to INFO'
        ;;

        *)
            echo $"Usage: set_core_log_level {debug|info}"
            exit 1
esac

curl 'http://localhost:11626/ll?level='$log_level
echo 'current log level:'
curl 'http://localhost:11626/ll?level'
